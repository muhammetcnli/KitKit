@model ProductViewModel

<form asp-controller="Home" asp-action="EditProduct" method="post">
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th style="width: 80px;">@Html.DisplayNameFor(m => m.Products[0].ProductId)</th>
                <th style="width: 100px;">@Html.DisplayNameFor(m => m.Products[0].Image)</th>
                <th>@Html.DisplayNameFor(m => m.Products[0].Name)</th>
                <th>@Html.DisplayNameFor(m => m.Products[0].Price)</th>
                <th></th>
                <th style="width: 150px;">Setting</th>
            </tr>
        </thead>
        <tbody>
            @for(var i = 0; i< @Model.Products.Count;i++){
                <tr >
                    <td>@Model.Products[i].ProductId</td>
                    <input type="hidden" asp-for="@Model.Products[i].ProductId">
                    <td><img src="~/img/@Model.Products[i].Image" class="img-fluid" alt=""></td>
                    <td>@Model.Products[i].Name</td>
                    <td>@Model.Products[i].Price</td>
                    <td>
                        <input type="checkbox" asp-for="@Model.Products[i].IsActive">
                    </td>
                    <td>
                        <a asp-controller="Home" asp-action="Edit" asp-route-id="@Model.Products[i].ProductId" class="btn btn-success">Edit</a>
                        <a asp-controller="Home" asp-action="Delete" asp-route-id="@Model.Products[i].ProductId" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <button type="submit" class="btn btn-success">Kaydet</button>
</form>